<% provide(:title, "Edit user") %>  
<div class="row">
  <div class="col-md-6 col-md-offset-3">    
    <h1 class="account_info">Update your profile</h1>
    <%= form_for(@user) do |f| %>    
      <%= render "fields", f: f %>      
      <%= f.submit "Save changes", class: "btn btn-primary btn_commit" %>
    <% end %>    
    <div class="gravatar_edit">    
      <%= gravatar_for @user %>      
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>