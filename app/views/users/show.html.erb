<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">  
    <section class="user_info">
      <%= gravatar_for @user %>
      <br/>
      <h1>                
        <%= @user.name %>        
      </h1>               
    </section>    
  </aside>    
  <div class="col-md-8 user_style" align="center">      
    <% if @user.lessons.any? %>
      <h2>Activities</h2>      
      <hr/>
      <ol class="lessons">
        <%= render @lessons %>
      </ol>
        <%= will_paginate @lessons %>
    <% end %>
  </div>
</div>
  