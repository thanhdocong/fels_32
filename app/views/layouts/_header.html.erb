      <%= link_to "FELS_32", current_user.isadmin ? admin_root_path : root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if logged_in? %>
          <% if current_user.isadmin %>
            <li><%= link_to "Home", admin_root_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Categories<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Create", new_admin_category_path %></li>
                <li><%= link_to "Show", admin_categories_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Words<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Create", new_admin_word_path %></li>
                <li><%= link_to "Show", admin_words_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Users<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">              
